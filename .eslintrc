{
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    // ...
    "plugin:react-hooks/recommended",
    "plugin:prettier/recommended"
  ],
  "plugins": ["prettier"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 11,
    "sourceType": "module",

    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "semi": "error",
    "prettier/prettier": "error"
  },
  "env": {
    "browser": true,
    "node": true,
    "shared-node-browser": true,
    "es6": true
  },
  "ignorePatterns": ["exec"]
}
